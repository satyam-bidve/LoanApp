@model LoanApp_SanjaySir.Models.LoanDetails

@{
    ViewBag.Title = "LoanAppForm";
    Dictionary<string, string> loanTypesDict = new Dictionary<string, string>();
    loanTypesDict.Add("L01", "Vehicle Loan");
    loanTypesDict.Add("L02", "Personal Loan");
    loanTypesDict.Add("L03", "Gold Loan");

}

<h2>LoanAppForm</h2>

@using (Html.BeginForm("GetLoanAppForm", "Customer", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>LoanDetails</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
<div class="form-group">
    @Html.LabelFor(model => model.LoanType, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(x => x.LoanType, new SelectList(loanTypesDict.Values), "Choose Loan Type", new { @class = "form-control custom-select", style = "width: 100%" })
        @Html.ValidationMessageFor(model => model.LoanType, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        @Html.LabelFor(model => model.LoanAmountReq, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LoanAmountReq, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LoanAmountReq, "", new { @class = "text-danger" })
        </div>
    </div>

   

    <div class="form-group m-4">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Submit</button>
            <button type="button" id="nextButton" class="btn btn-primary">Next</button>
        </div>
    </div>

    <script>
    document.getElementById('nextButton').addEventListener('click', function() {

        window.location.href = '@Url.Action("LoanAppFormDocuments", "Home")';
    });
    </script>
</div>
}

<div>
    @Html.ActionLink("Back ", "LoanApplicationForm")
</div>
