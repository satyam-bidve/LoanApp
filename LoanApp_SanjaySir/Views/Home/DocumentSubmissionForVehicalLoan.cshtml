@model LoanApp_SanjaySir.Models.DocDetails

@{
    ViewBag.Title = "DocumentSubmissionForVehicalLoan";
    string[] names = new string[5] { "Pan Card", "Adhar Card", "Electricity bill", "School Cirtificate", "Driving Licence" };
}

<h2>Document Submission For Vehical Loan</h2>

@using (Html.BeginForm("ApplicationSubmission", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @for (int i = 0; i < 5; i++)
        {
            <div class="form-group">
                @Html.Label(names[i], htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Files[i], new { @class = "form-control", @type = "file" })
                    @Html.ValidationMessageFor(model => model.Files[i], "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group m-4">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Submit Application</button>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>